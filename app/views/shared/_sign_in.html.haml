%button{:type => "button", :class => "btn btn-default navbar-btn", "data-toggle" => "modal", "data-target" => "#sign_in_modal"}Sign In

%div{:class => "modal fade", :id => "sign_in_modal", :tabindex => "-1", :role => "dialog", "aria-labelledby" => "myModalLabel"}
  %div{:class => "modal-dialog", :role => "document"}
    .modal-content
      .modal-header
        %button{:type => "button", :class => "close", "data-dismiss" => "modal", "aria-label" => "Close"}
          %span{"aria-hidden" => "true"} &times;
        %h4{:class => "modal-title", :id => "myModalLabel"}Sign In
      
      = form_for(:user, url: session_path(:user)) do |f|
        .modal-body
          .field.form-group
            = f.label :email
            %br
            = f.email_field :email, autofocus: true, class: "form-control"
          .field.form-group
            = f.label :password
            %br
            = f.password_field :password, autocomplete: "off", class: "form-control"
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me

        .modal-footer.actions
          = f.submit "Sign in" ,class: "btn btn-primary"